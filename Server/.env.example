# SRAtix Server — Environment Variables
# Copy to .env and fill in real values.

# MariaDB
DATABASE_URL=mysql://user:password@host:3306/dbname

# Upstash Redis (TLS)
REDIS_URL=rediss://default:token@host.upstash.io:6379

# JWT secrets (generate with: node -e "console.log(require('crypto').randomBytes(36).toString('base64url'))")
JWT_SECRET=
JWT_REFRESH_SECRET=

# WP ↔ Server HMAC shared secret (must match WP plugin settings)
WP_API_SECRET=

# Server config
NODE_ENV=development
PORT=3000

# Stripe (test or live keys from dashboard.stripe.com)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_MODE=test

# SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@example.com
